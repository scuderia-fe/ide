root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{svelte,ts}]
indent_style = space
indent_size = 2

[*.rs]
indent_style = space
indent_size = 4

[*.js,*.cjs,*.mjs]
indent_style = space
indent_size = 2

[*.{yaml,yml}]
trim_trailing_whitespace = false
